
<!-- Portfolio Item Heading -->
 <h1 class="my-4 large col-md-8">Workouts That Work <br>for You
 </h1>

 <!-- Portfolio Item Row -->
 <div class="row">
   <div class="col-md-6">
     <img class="img-fluid" src="victor-freitas-546919-unsplash.jpg" width="500" height = "auto" >
   </div>


   <div class="col-md-6">

     <h3 class="my-3">Log In</h3>
     <p>Or <%= link_to 'sign up', new_user_path%> to make a new account.
     <br>

     <%= form_for @user, url: login_path, method: :post do |f| %>
     <div class="form-group">
       <%= f.label "Email" %>
       <%= f.text_field :email, placeholder: "email address", :class => "form-control", :id =>"exampleFormControlSelect1" %><br>
     </div>
     <div class="form-group">
       <%= f.label "Password" %>
       <%= f.password_field :password, placeholder: "password", :class => "form-control", :id =>"exampleFormControlSelect1"%><br>
     </div>
       <% if flash[:notice] %>
       <p class="red"><%= flash[:notice] %> </p>
       <% end %>

       <%= f.submit 'Log In', :class=>"btn btn-info" %>
     <% end %>
     </p>

     </div>

 </div>
 <!-- /.row -->
