<h2>All Exercises</h2>

<br>
<%= form_tag(exercises_path, method: :get) do %>
<%= label_tag "Select by Category" %>
<%= select_tag :category_id, options_from_collection_for_select(@categories, :id, :name, params[:category_id]), {:include_blank => "Choose a Category"} %><br>
<%= label_tag "Search Exercise by Name" %>
<%= text_field_tag :search, params[:search] %>
<%= submit_tag "Search"%>
<% end %>

<br>

<% @exercises.map do |exercise| %>
  <p><%= image_tag exercise.image, style: "height:40%;width:40%;" %></p>
  <%= link_to exercise.name, exercise_path(exercise) %>
  <% end %>


