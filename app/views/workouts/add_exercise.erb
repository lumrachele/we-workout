<h2>All Exercises</h2>

<h3><%= "Current exercises for #{@workout.title}:"  %></h3>
<% if @workout.exercises.empty? %>
  <p>Wow, such empty.</p>
  <% else %>
    <ul>
      <% @workout.exercises.each do |exercise| %>
        <li><%=exercise.name%></li>
      <% end %>
    </ul>
<% end %>
<br>
<%= link_to "Return to Edit Workout", edit_workout_path %>
<br>
<%= form_tag(add_exercise_path, method: :get) do %>
<%= label_tag "Select by Category" %>
<%= select_tag :category_id, options_from_collection_for_select(@categories, :id, :name, params[:category_id]), {:include_blank => "Choose a Category"} %><br>
<%= label_tag "Search Exercise by Name" %>
<%= text_field_tag :search, params[:search] %>
<%= submit_tag "Search"%>
<% end %>

<br>

<% @exercises.each do |exercise| %>
  <p><%= image_tag exercise.image, style: "height:40%;width:40%;" %></p>
  <%= link_to exercise.name, exercise_path(exercise) %>
  <%= button_to "Add exercise to workout", add_the_exercises_path, method: :patch, params:{workout:{exercise:{exercise_id: exercise.id, exercise_name: exercise.name}}} %>

  <% end %>

